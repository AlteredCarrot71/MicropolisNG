<Page
    x:Class="TextAlignment.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TextAlignment"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <SolidColorBrush x:Key="Fore">Green</SolidColorBrush>
        <TextAlignment x:Key="Justify">Justify</TextAlignment>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock Text="Here is a lot of content. Note the Foreground attribute works, the TextAlignment one does not." Foreground="{StaticResource Fore}" TextAlignment="{StaticResource TextA}" Width="200" TextWrapping="Wrap" />
    </Grid>
</Page>
